<div class="card mb-3">
  <h2 class="card-header h4">
    Brand #<%= brand.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= brand.name %></dd>

      <dt>Description</dt>
      <dd><%= brand.description %></dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @brand.image, class: "img-fluid" %>
      </dd>

      <dt>Sport</dt>
      <dd><%= brand.sport %></dd>

      <dt>Category</dt>
      <dd><%= brand.category %></dd>

      <dt>Pricepoint</dt>
      <dd><%= brand.pricepoint %></dd>

      <dt>Highlyrated</dt>
      <dd><%= brand.highlyrated %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back brand, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_brand_url(brand), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to brand, method: :delete, data: { confirm: "Do you really want to delete this brand?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(brand.updated_at) %> ago
  </div>
</div>
